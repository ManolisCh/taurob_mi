<?xml version="1.0"?>

<robot name="taurob_erl" xmlns:xacro="http://www.ros.org/wiki/xacro" >

  <xacro:include filename="$(find taurob_erl_description)/urdf/inertia_tensors.urdf.xacro" />

  <property name="tracker_base_size_x" value="1.0" />
  <property name="tracker_base_size_y" value="0.5" />
  <property name="tracker_base_size_z" value="0.2 " />

  <property name="tracker_base_offset_x" value="-0.122" />
  <property name="tracker_base_offset_z" value="-0.08" />

  <property name="flipper_offset_x" value="-0.051" />
  <property name="flipper_upper_shortening_x" value="0.05" />



  <!-- width overall is 0.58 ->  (0.58 - 0.0925)/2 = 0.24375 -->
  <property name="track_offset_y" value="0.24375" />
  <!--Below pending clarification-->
  <property name="track_offset_z" value="-0.09" />

  <property name="track_wheel_radius" value="0.13" />
  <property name="track_width" value="0.0925" />

  <xacro:include filename="$(find taurob_erl_description)/urdf/taurob_chassis.gazebo.xacro.xml" />
   <xacro:tracker_chassis_gazebo_force_based_move_macro />



    <link name="base_link"/>

    <joint name="chassis_joint" type="fixed">
      <origin xyz="${-tracker_base_offset_x} 0 0.193" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="chassis_link"/>
    </joint>

    <link name="chassis_link">

      <xacro:inertial_cuboid_with_pose mass="30" x_length="${tracker_base_size_x*0.66}" y_length="${tracker_base_size_y}" z_length="${tracker_base_size_z}" >
        <origin xyz="${-tracker_base_size_x*0.25} 0.0 -0.05" rpy="0 0 0" />
      </xacro:inertial_cuboid_with_pose>

      <!--Primitives with materials need to be used before .dae, otherwise material does not get applied-->
      <visual>
        <origin xyz="${tracker_base_offset_x - flipper_offset_x - (tracker_base_size_x*0.5-track_wheel_radius-flipper_offset_x)*0.5} -${track_offset_y} ${track_offset_z}" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://taurob_erl_description/meshes/tracker_chassis_sides.dae"/>
        </geometry>
        <material name="black">
          <color rgba="0 0 0 1"/>
        </material>
      </visual>
      <visual>
        <origin xyz="${tracker_base_offset_x - flipper_offset_x - (tracker_base_size_x*0.5-track_wheel_radius-flipper_offset_x)*0.5} ${track_offset_y} ${track_offset_z}" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://taurob_erl_description/meshes/tracker_chassis_sides.dae"/>
        </geometry>
        <material name="black">
          <color rgba="0 0 0 1"/>
        </material>
      </visual>

      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://taurob_erl_description/meshes/tracker_chassis_no_tracks.dae"/>
        </geometry>
      </visual>

      <!--Left/right track box geoms-->
      <collision>
        <origin xyz="${tracker_base_offset_x - flipper_offset_x - (tracker_base_size_x*0.5-track_wheel_radius-flipper_offset_x)*0.5} -${track_offset_y} ${track_offset_z}" rpy="0 0 0"/>
        <geometry>
          <box size="${tracker_base_size_x*0.5-track_wheel_radius-flipper_offset_x} ${track_width} ${track_wheel_radius*2}"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="${tracker_base_offset_x - flipper_offset_x - (tracker_base_size_x*0.5-track_wheel_radius-flipper_offset_x)*0.5}  ${track_offset_y} ${track_offset_z}" rpy="0 0 0"/>
        <geometry>
          <box size="${tracker_base_size_x*0.5-track_wheel_radius-flipper_offset_x} ${track_width} ${track_wheel_radius*2}"/>
        </geometry>
      </collision>

	  <!--Left/right back track cylinder geoms-->
      <collision>
        <origin xyz="${tracker_base_offset_x-(tracker_base_size_x*0.5-track_wheel_radius)} -${track_offset_y} ${track_offset_z}" rpy="${M_PI/2} 0 0"/>
        <geometry>
          <cylinder length="${track_width}" radius="${track_wheel_radius}"/>
        </geometry>
        <material name="red">
          <color rgba="1 0 0 1"/>
        </material>
      </collision>
      <collision>
        <origin xyz="${tracker_base_offset_x-(tracker_base_size_x*0.5-track_wheel_radius)} ${track_offset_y} ${track_offset_z}" rpy="${M_PI/2} 0 0"/>
        <geometry>
          <cylinder length="${track_width}" radius="${track_wheel_radius}"/>
        </geometry>
      </collision>

      <!--Chassis middle-->
      <collision>
        <origin xyz="${tracker_base_offset_x-0.13} 0.0 ${tracker_base_offset_z+0.005}" rpy="0 0 0"/>
        <geometry>
          <box size="0.7 0.5 0.15"/>
        </geometry>
      </collision>


      <!--Left track cylinder (front/back) geoms-->
      <!--
      <collision>
        <origin xyz="${tracker_base_offset_x + tracker_base_size_x*0.5 - track_wheel_radius} ${track_offset_y} ${tracker_base_offset_z}" rpy="${M_PI*0.5} 0 0"/>
        <geometry>
          <cylinder radius="${track_wheel_radius}" length="${track_width}" />
        </geometry>
      </collision>
      <collision>
        <origin xyz="${tracker_base_offset_x -tracker_base_size_x*0.5 + track_wheel_radius} ${track_offset_y} ${tracker_base_offset_z}" rpy="${M_PI*0.5} 0 0"/>
        <geometry>
          <cylinder radius="${track_wheel_radius}" length="${track_width}" />
        </geometry>
      </collision>
      -->
      <!--Right track cylinder (front/back) geoms-->
      <!--
      <collision>
        <origin xyz="${tracker_base_offset_x + tracker_base_size_x*0.5 - track_wheel_radius} -${track_offset_y} ${tracker_base_offset_z}" rpy="${M_PI*0.5} 0 0"/>
        <geometry>
          <cylinder radius="${track_wheel_radius}" length="${track_width}" />
        </geometry>
      </collision>
      <collision>
        <origin xyz="${tracker_base_offset_x - tracker_base_size_x*0.5 + track_wheel_radius} -${track_offset_y} ${tracker_base_offset_z}" rpy="${M_PI*0.5} 0 0"/>
        <geometry>
          <cylinder radius="${track_wheel_radius}" length="${track_width}" />
        </geometry>
      </collision>
      -->
    </link>



</robot>
