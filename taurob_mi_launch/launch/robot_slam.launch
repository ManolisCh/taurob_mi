<launch>
<!-- Launch file for use on robot computer. Runs the nodes on robot -->
  
<!-- taurobot drivers (need to run seperately clinet watchdog on new OCU terminal) -->
<include file="$(find taurob_mi_launch)/launch/tracker_bringup.launch"/>


<!-- hokuyo laser scaner drivers -->
  <node pkg="urg_node" type="urg_node" respawn="true" output="screen" name="hokuyo">
    <param name="frame_id" type="string" value="base_laser"/>
    <param name="ip_address" type="string" value="10.0.0.61"/> 
    <param name="publish_intensity" type="bool" value="false"/>
    <remap from="/last" to="/scan" />
   </node>

 <!-- imu drivers -->
  <node pkg="um7" type="um7_driver" respawn="true" output="screen" name="imu"/>

<!-- Filter laser scane to remove veiling effect -->
<!--node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter">
    <rosparam command="load" file="$(find experiments_launch)/config/laser_filter.yaml" />
    <remap from="/scan_filtered" to="/scan_final" />
</node-->

<!-- tf transform -->
<!-- args ="x y z qx qy qz frame_id child_frame_id period_in_ms" -->
<node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" args="0.275 0 0.075 0 0 0 /base_link /base_laser 25" />


<!-- AMCL -->
<include file="$(find taurob_mi_launch)/launch/slam_gmapping.launch"/>


</launch>
